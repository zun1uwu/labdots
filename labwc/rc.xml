<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <theme>
    <name>ch</name>
    <cornerRadius>0</cornerRadius>
    <font name="JetBrains Mono" size="10" />
    <dropShadows>yes</dropShadows>
    <icon>Papirus</icon>
    <titlebar>
	<layout>
	    iconify:menu,close,
	</layout>
    </titlebar>
  </theme>

  <keyboard layoutScope="de">
    <!-- Use a different terminal emulator -->
    <keybind key="A-S-c"><action name="Close" /></keybind>
    <keybind key="A-Tab"><action name="NextWindow" /></keybind>
    <keybind key="W-Tab"><action name="ToggleMaximize" /></keybind>
    <keybind key="A-S-Return"><action name="Execute" command="alacritty" /></keybind>
    <keybind key="A-p"><action name="Execute" command="fuzzel" /></keybind>
    <keybind key="A-e"><action name="Execute" command="thunar" /></keybind>
    <keybind key="Print"><action name="Execute" command="hyprshot -m region" /></keybind>
  </keyboard>

  <mouse>
    <default />
    <!-- Show a custom menu on desktop right click -->
    <context name="Root">
      <mousebind button="Right" action="Press">
	      <!-- <action name="ShowMenu" menu="some-custom-menu" /> -->
      </mousebind>
    </context>
  </mouse>

  <libinput>
	  <device category="non-touch">
		<accelProfile>flat</accelProfile>	  
  	  </device>
  </libinput>

</labwc_config>
